extends ../layout

block content
  .col-sm-8.col-sm-offset-2
    form(method='POST')
      legend Passwort vergessen
      input(type='hidden', name='_csrf', value=token)
      .form-group
        p Bitte gib deine EMail Adresse ein und wir senden Dir einen Link um dein Passwort zurückzusetzen.
        label.control-label(for='email') Email
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus=true)
      .form-group
        button.btn.btn-primary(type='submit')
          i.fa.fa-key
          | Passwort zurücksetzen
