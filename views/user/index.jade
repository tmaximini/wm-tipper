extends ../layout

block content
  h1 Alle User
  .users
    .table-responsive
      table.table.table-striped
        thead
          tr
            th #
            th Name
            th E-Mail
            th Registriert
            th Admin
        tbody
          - var i = 0
          for usr in userList
            tr
              td= ++i
              td= usr.profile.name
              td= usr.email
              td= usr.createdAt ? moment(usr.createdAt) : 'keine info'
              td= usr.admin ? 'Ja' : 'Nein'


    .actions
