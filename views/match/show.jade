extends ../layout

block content
  h1= match.name
  .groups-details
    h1= match.team1.name + ' - ' + match.team2.name
    .date= match.when.toUTCString()
  .actions
    a.btn.btn-primary(href='/matches/#{match._id}/edit')
      | Match editieren
    a.btn.btn-primary(href='/matches/#{match._id}/tip')
      | Tip abgeben
