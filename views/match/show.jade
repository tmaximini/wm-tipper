extends ../layout

block content
  .match-details
    h1= match.team1.name + ' - ' + match.team2.name
    .status= match.status
    .date= match.i18nDateString
    if !match.started
      .fromNow= match.i18nDateFromNow
    else
      .ergebnis= match.result

    if userTip
      .tip= 'Dein Tip: ' + userTip.result
      .points= 'Das gibt ' + points + ' Punkte.'

  .actions
    if user && user.admin
      a.btn.btn-primary(href='/matches/#{match._id}/edit')
        | Match editieren
      form(method='post', action='/matches/#{match._id}')
        input(type='hidden', name='_csrf', value=token)
        input(type='hidden', name='_method' value='DELETE')
        input.btn.btn-danger(type='submit', value='Match l√∂schen')
    p
    a.btn.btn-success(href='/groups')
      | Tippen
