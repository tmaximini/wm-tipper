extends ../layout

block content
  h1= group.name +  ' - Spiel√ºbersicht'
  .groups
    each match in matches
      .group
        .match= match.i18nDateString
          br
          a(href='/groups/#{group.slug}/matches/#{match._id}')= match.team1.name + ' - ' + match.team2.name
        .userTip
          if match.userTip
            .title
             | Dein Tip: #{match.userTip.scoreTeam1} - #{match.userTip.scoreTeam2}
            .editTip
              a.btn.btn-primary(href='/groups/#{group.slug}/matches/#{match._id}/tips/#{match.userTip._id}/edit')
               | Tip editieren
          else
            .title
             | noch nicht getippt
            .editTip
              a.btn.btn-success(href='/groups/#{group.slug}/matches/#{match._id}/tips/new')
               | Jetzt tippen
  .actions
    if user && user.admin
      a.btn.btn-primary(href='/matches/new')
        | Neue Partie erstellen
