extends ../layout

block content
  h1 Bestenliste
  .top10
    table.table.table-striped
      thead
        tr
          th Name
          th # tips
          th Points / tip
          th Total Points
      tbody
        for usr in users
          tr(class = usr.email === user.email ? 'you' : undefined)
            - var totalPoints = usr.totalPointsAllGroups()
            td= usr.profile.name
            td= usr.tips.length
            td= usr.tips.length ? (totalPoints / usr.tips.length).toFixed(2) : 0
            td= totalPoints



