extends ../layout

block content
  h1 Bestenliste
  .top10.table-responsive
    table.table.table-striped
      thead
        tr
          th #
          th Name
          th Anz. Gruppen
          th Anz. Tipps
          th Ø Punkte / Tipp
          th Punkte gesamt
          th Ø Punkte / Gruppe
      tbody
        - var i = parseInt(page-1) * parseInt(perPage)
        for usr in users

          tr(class = (user && (usr.email === user.email)) ? 'you' : undefined)
            td= ++i
            td= usr.profile.name
            td= usr.groups.length
            td= usr.tips.length
            td= usr.tips.length ? (usr.totalPoints / usr.tips.length).toFixed(2) : 0
            td= usr.totalPoints
            td= (usr.groups.length && usr.tips.length) ? (usr.totalPoints / usr.groups.length).toFixed(2) : 0


    if (page > 1)
      - var nextPage = parseInt(page) - 1
      a.btn.btn-default.prevPage(href="/bestenliste?page=#{nextPage}") vorige
    if (page*perPage < totalCount)
      - var nextPage = parseInt(page) + 1
      a.btn.btn-default.nextPage(href="/bestenliste?page=#{nextPage}") nächste



